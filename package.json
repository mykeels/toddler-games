{
  "name": "toddler-games",
  "private": true,
  "version": "0.0.116",
  "type": "module",
  "scripts": {
    "predeploy": "npm version patch && npm run build:github",
    "deploy": "gh-pages -d dist --dotfiles",
    "dev": "npx -y concurrently \"vite\" \"npm run build:federation\"",
    "start": "npm run dev",
    "build:federation": "onchange -i ** --exclude dist --exclude node_modules -- vite build",
    "build:github": "tsc -b && npx cross-env ASSET_URL=/toddler-games/ vite build --base=/toddler-games/",
    "build": "tsc -b && vite build",
    "ts": "tsc -b",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@originjs/vite-plugin-federation": "^1.3.6",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@rse/soundfx": "^1.1.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.9.0",
    "gh-pages": "^6.1.1",
    "howler": "^2.2.4",
    "lucide-react": "^0.454.0",
    "nanoid": "^5.0.9",
    "react": "^18.3.1",
    "react-canvas-draw": "^1.2.1",
    "react-confetti-explosion": "^2.1.2",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.4.6",
    "react-markdown": "^9.0.1",
    "react-query": "^3.39.3",
    "react-router": "^7.6.2",
    "remark-gfm": "^4.0.0",
    "swipe-listener": "^1.3.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "url-join": "^5.0.0",
    "use-debounce": "^10.0.4",
    "use-sound": "^4.0.3",
    "vite-raw-plugin": "^1.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@eslint/js": "^9.9.0",
    "@storybook/addon-essentials": "^8.3.4",
    "@storybook/addon-interactions": "^8.3.4",
    "@storybook/addon-links": "^8.3.4",
    "@storybook/addon-onboarding": "^8.3.4",
    "@storybook/blocks": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@storybook/react-vite": "^8.3.4",
    "@storybook/test": "^8.3.4",
    "@types/howler": "^2.2.11",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-canvas-draw": "^1.2.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-storybook": "^0.9.0",
    "gh-pages-deploy": "^0.5.1",
    "globals": "^15.9.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.47",
    "postcss-prefixer": "^3.0.0",
    "postcss-scope": "^1.7.4",
    "postcss-transformselectors": "^2.0.1",
    "storybook": "^8.3.4",
    "tailwindcss": "^3.4.11",
    "tailwindcss-scoped-preflight": "^2.0.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^6.2.6",
    "vite-plugin-pwa": "^0.20.5"
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "prep": [
      "build"
    ],
    "commit": "Deploy to gh-pages",
    "post": [],
    "noprompt": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
